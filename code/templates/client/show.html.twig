{% extends 'base.html.twig' %}

{% block title %} Client Details{% endblock %}

{% block head %}
    {% include 'Partials/header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row mb-4">
            <div class="col">

                <h1 class="h2 mb-4">
                    <i class="fas fa-building me-2"></i>{{ client.companyName }}
                </h1>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0"> Client Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="mb-2">Manager</h6>
                                    <p class="mb-0 fw-bold">{{ client.managerFirstName }} {{ client.managerLastName }}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="mb-2">Phone</h6>
                                    <p class="mb-0">
                                        <i class="fas fa-phone me-1"></i>
                                        {{ client.phone }}
                                    </p>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="p-3 border rounded bg-light">
                                    <h6 class="mb-2">Address</h6>
                                    <p class="mb-0">
                                        {{ client.address }}<br>
                                        {{ client.city }}, {{ client.country }}
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_client_edit', {'id': client.id}) }}" class="btn btn-warning">
                                <i class="fas fa-edit me-1"></i>Update
                            </a>
                            <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
                                <i class="fas fa-list me-1"></i>Return to liste
                            </a>
                            {{ include('client/_delete_form.html.twig') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}