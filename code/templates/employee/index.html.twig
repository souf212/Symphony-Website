{% extends "layout.html.twig" %}

{% block content %}
<div class="container my-5">
    <h1 class="mb-4">Recherche d'employés</h1>

     <form action="" method="get" class="row g-3 mb-4">
        <div class="col-auto">
            <input type="text" name="employee" value="{{ query }}" class="form-control" placeholder="Rechercher un employé">
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary">Rechercher</button>
        </div>
    </form>

     <table class="table table-hover">
        <thead class="table-light">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Adresse e-mail</th>
                <th scope="col">CIN</th>
                <th scope="col">Voir</th>
                <th scope="col">Éditer</th>
                <th scope="col">Supprimer</th>
            </tr>
        </thead>
        <tbody>
            {% for item in employees %}
                <tr>
                    <th scope="row">{{ item.id }}</th>
                    <td>{{ item.fullName }}</td>
                    <td>{{ item.emailAddress }}</td>
                    <td>{{ item.identityCode }}</td>
                    <td>
                        <a href="{{ url('app_view_employee', {id: item.id}) }}" 
                           class="badge rounded-pill bg-info">
                            <i class="fa-regular fa-eye"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('app_edit_employee', {employeeIdentifier: item.id}) }}" 
                           class="badge rounded-pill bg-success">
                            <i class="fa-solid fa-pen-to-square"></i>
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('app_remove_employee', {id: item.id}) }}" 
                           class="badge rounded-pill bg-danger">
                            <i class="fa-solid fa-trash"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun employé trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{% endblock content %}
