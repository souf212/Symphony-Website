{% block _security_form_email_row %}
    <div class="mt-4">
        <div class="form-floating mb-3">
            {{ form_widget(form, {attr: {class: 'form-control', placeholder: 'name@example.com'}}) }}
            {{ form_label(form, 'Email address', {label_attr: {class: 'form-label'}}) }}
        </div>
        {{ form_errors(form) }}
    </div>
{% endblock %}

{% block _security_form_password_row %}
    <div class="mt-4">
        <div class="form-floating">
            {{ form_widget(form, {attr: {class: 'form-control', placeholder: 'Password', autocomplete: 'off'}}) }}
            {{ form_label(form, 'Password', {label_attr: {class: 'form-label'}}) }}
        </div>
    </div>
{% endblock %}

{% block _security_form_label %}
    <h3>{{ label }}</h3>
{% endblock %}