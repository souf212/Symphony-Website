{% extends 'base.html.twig' %}

{% block title %}New Invoice{% endblock %}

{% block head %}
    {% include 'Partials/header.html.twig' %}
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">
                <i class="fas fa-file-invoice-dollar me-2 text-primary"></i>Create New Invoice
            </h1>

        </div>

        <div class="row">
            <div class="col-lg-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        {{ include('invoice/_form.html.twig') }}
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-grid">
                            <a href="{{ path('app_invoice_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Return to Invoices
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
